    <script>
      var $tbody = $('pages')
      $('.up').click(function () {
        var $tr = $(this).parent();

        if ($tr.is(':first-child'))
          $tbody.append($tr);
        else
          $tr.insertBefore($tr.prev());
      });

      $('.down').click(function () {
        var $tr = $(this).parent();

        if ($tr.is(':last-child'))
          $tbody.prepend($tr);
        else
          $tr.insertAfter($tr.next());
      });

      function verifyUser(userID, verify) {
        var data = {
          userID: userID,
          verify: verify,
        };
        $.ajax({
          type: "POST",
          url: "/api/admin/verifyuser",
          data: JSON.stringify(data),
          contentType: "application/json; charset=utf-8",
          dataType: "json",
          async: false,
          success: function (data) {
